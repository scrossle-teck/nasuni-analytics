{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "urn:com:teckcominco:scrossle:forensic-acl:1.0.0",
    "title": "Forensic ACL Record",
    "schemaVersion": "1.0.0",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "Path": { "type": "string" },
            "CollectedUtc": { "type": "string", "format": "date-time" },
            "Host": { "type": "string" },
            "Collector": { "type": "string" },
            "Owner": { "type": "string" },
            "Sddl": { "type": "string" },
            "Attributes": { "type": "array", "items": { "type": "string" } },
            "Access": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "Identity": { "type": "string" },
                        "Rights": { "type": "string" },
                        "Type": { "type": "string" },
                        "IsInherited": { "type": "boolean" },
                        "InheritanceFlags": { "type": "string" },
                        "PropagationFlags": { "type": "string" }
                    }
                }
            },
            "FingerprintSha256": { "type": "string" },
            "CollectionSha256": { "type": "string" }
        },
        "required": [
            "Path",
            "CollectedUtc",
            "Host",
            "Collector",
            "Owner",
            "Sddl",
            "Access",
            "FingerprintSha256",
            "CollectionSha256"
        ]
    }
}
